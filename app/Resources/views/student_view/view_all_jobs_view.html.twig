 {% extends 'unemp_student_base_view.html.twig' %}

 {% block bodyextend %}

 <div class="col-md-12 panel-success">
  <div class="content-box-header panel-heading">
    <div class="panel-title ">View All Jobs</div>

     
  </div>
  <div class="content-box-large box-with-header">
        <div class="table-responsive">
            <table class="table table-striped projects">
                      <thead>
                        <tr>
                          <th style="width: 20%">Job Title</th>
                          <th>Job Description</th>
                          <th>Deadline</th>
                          <th style="width: 20%">Apply for this job</th>
                        </tr>
                      </thead>
                      <tbody>
                      	{% for count,job_data in jobs_data %}
	                        <tr>
	                          	<td>{{ job_data['name'] }}</td>
	                           <td>{{ job_data['detail'] }}</td>
                             <td>{{ job_data['deadline'] | date('F j, Y g:i a') }}</td>
                              <td>
                                <a href="{{ app.request.getSchemeAndHttpHost() }}/hire_student/{{ job_data['id'] }}" class="btn btn-primary"><i class="fa fa-folder"></i> Apply </a> 
                              </td>

	                        </tr>
						            {% endfor %}
                      </tbody>
                    </table>
       </div>
  </div>
    <br /><br />
  </div>
</div>

<style type="text/css">label{display: none;}</style>
 
{% endblock %}        